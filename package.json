{
  "name": "generic-annotator",
  "displayName": "Generic Annotator",
  "description": "VS Code extension for linters",
  "icon": "icon.png",
  "author": "Takamasa Oshikiri",
  "license": "MIT",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/oshikiri/vscode-generic-annotator"
  },
  "publisher": "oshikiri",
  "categories": [
    "Linters"
  ],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.43.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "genericAnnotator",
      "properties": {
        "genericAnnotator.annotatorConfigurations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pathRegex": {
                "type": "string",
                "description": ""
              },
              "commandTemplate": {
                "type": "string",
                "description": "command template (${path} will be replace by absolute path of focus file)"
              }
            }
          },
          "default": [
            {
              "pathRegex": "\\.ledger$",
              "commandTemplate": "ledgerlint -j -f $(realpath --relative-to=. ${path})"
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "cd client && cd .. && npm run compile",
    "precompile": "npm run format-check && npm run lint",
    "compile": "tsc -b",
    "package": "vsce package",
    "lint": "eslint **/*.ts",
    "watch": "tsc -b -w",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "cd server && npm test && cd - && sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.11.7",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.6.0",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4",
    "vsce": "^2.6.3"
  }
}
