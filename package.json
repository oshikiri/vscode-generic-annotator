{
  "name": "generic-annotator",
  "displayName": "Generic Annotator",
  "description": "VS Code extension for linters",
  "icon": "icon.png",
  "author": "Takamasa Oshikiri",
  "license": "MIT",
  "version": "2.4.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/oshikiri/vscode-generic-annotator"
  },
  "publisher": "oshikiri",
  "categories": [
    "Linters"
  ],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "genericAnnotator",
      "properties": {
        "genericAnnotator.annotatorConfigurations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "pathRegex": {
                "type": "string",
                "description": ""
              },
              "commandTemplate": {
                "type": "string",
                "description": "command template (${path} will be replace by absolute path of focus file)"
              }
            }
          },
          "default": [
            {
              "pathRegex": "\\.ledger$",
              "commandTemplate": "node ${workspaceRoot}/scripts/regex.js ${path} '2020-03-26'"
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "precompile": "npm run format-check && npm run lint",
    "compile": "tsc -b",
    "package": "vsce package",
    "lint": "eslint **/*.ts",
    "watch": "tsc -b -w",
    "format": "prettier --write --list-different .",
    "format-check": "prettier --check .",
    "test": "jest && sh ./scripts/e2e.sh"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/parser": "^6.13",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "ts-jest": {
            "tsconfig": "tsconfig.json"
          }
        }
      ]
    },
    "testMatch": [
      "**/exec.test.ts"
    ]
  }
}
